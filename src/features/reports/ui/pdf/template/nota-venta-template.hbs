<style>
/* Configuración general del documento */
@page { size: A4; margin: 10mm 10mm 10mm 10mm; }
html, body { height: 100%; -webkit-print-color-adjust: exact; print-color-adjust: exact; }
body {
  font-family: Arial, Helvetica, sans-serif;
  font-size: 8pt;
  line-height: 1.2;
  color: #000;
  font-variant-numeric: tabular-nums;
  margin: 0;
  padding: 0;
}

/* Variables para bordes consistentes */
:root { --b: 1pt; --b2: 0.5pt; --b3: 1.2pt; }

/* Contenedor principal */
.page {
  width: 100%;
  box-sizing: border-box;
}

/* CABECERA: estructura de 3 columnas */
.header {
  display: table;
  width: 100%;
  margin-bottom: 3mm;
  border-collapse: collapse;
}

.header-row {
  display: table-row;
}

/* Columna del logo */
.logo-cell {
  display: table-cell;
  width: 14%;
  vertical-align: middle;
  padding-right: 3mm;
}
.logo-cell img {
  height: 10mm;
  width: auto;
}

/* Columna central con datos de emisor */
.emisor-cell {
  display: table-cell;
  width: 56%;
  vertical-align: top;
  padding-right: 3mm;
  font-size: 7.5pt;
  line-height: 1.3;
}
.emisor-cell h2 {
  font-size: 7.5pt;
  font-weight: bold;
  margin: 0 0 0.8mm 0;
  text-transform: uppercase;
}
.emisor-cell p {
  margin: 0;
  padding: 0;
  line-height: 1.25;
}

/* Columna derecha - caja NOTA DE VENTA */
.doc-type-cell {
  display: table-cell;
  width: 30%;
  vertical-align: middle;
}
.doc-type-box {
  border: var(--b3) solid #000;
  padding: 3mm;
  text-align: center;
  height: 14mm;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.doc-type-title {
  font-weight: bold;
  font-size: 10pt;
  margin-bottom: 2mm;
}
.doc-type-number {
  font-weight: bold;
  font-size: 10pt;
}

/* Fecha de emisión */
.fecha-emision {
  text-align: right;
  margin-bottom: 2mm;
  font-size: 7.5pt;
}

/* Tabla de datos del receptor */
.cliente-tabla {
  width: 100%;
  border-collapse: collapse;
  border: var(--b) solid #000;
  margin-bottom: 3mm;
  table-layout: fixed;
}
.cliente-tabla td {
  border: var(--b) solid #000;
  padding: 1.8mm;
  vertical-align: top;
  font-size: 8pt;
}
.cliente-izq {
  width: 60%;
}
.cliente-der {
  width: 40%;
}

.campo {
  display: table;
  width: 100%;
  margin-bottom: 1mm;
  line-height: 1.2;
}
.campo-titulo {
  display: table-cell;
  font-weight: bold;
  width: 20%;
  vertical-align: top;
}
.campo-valor {
  display: table-cell;
  vertical-align: top;
}

.campo-derecha {
  display: table;
  width: 100%;
  margin-bottom: 1mm;
  line-height: 1.2;
}
.campo-derecha .campo-titulo {
  width: 36%;
  vertical-align: top;
}

/* Tabla de productos */
.productos-tabla {
  width: 100%;
  border-collapse: collapse;
  border: var(--b) solid #000;
  margin-bottom: 3mm;
}
.productos-tabla thead th {
  border: var(--b) solid #000;
  padding: 1.3mm 1mm;
  font-size: 7pt;
  text-transform: uppercase;
  font-weight: bold;
  background-color: #fff;
}
.productos-tabla tbody td {
  border: var(--b2) solid #000;
  padding: 1.3mm 1mm;
  font-size: 7.5pt;
  vertical-align: middle;
}

.col-codigo { width: 15%; }
.col-descripcion { width: 50%; }
.col-cantidad { width: 10%; text-align: center; }
.col-precio { width: 10%; text-align: right; }
.col-desc { width: 5%; text-align: center; }
.col-total { width: 10%; text-align: right; }

/* Contador de líneas */
.contador-lineas {
  font-size: 7pt;
  margin-bottom: 2mm;
}

/* Secciones inferiores */
.secciones-inferiores {
  width: 100%;
  display: table;
  table-layout: fixed;
}

.seccion-izquierda {
  display: table-cell;
  width: 58%;
  padding-right: 3mm;
  vertical-align: top;
}

.seccion-derecha {
  display: table-cell;
  width: 42%;
  vertical-align: top;
}

/* Referencias y observaciones */
.referencias, .observaciones {
  border: var(--b) solid #000;
  padding: 1.8mm;
  margin-bottom: 3mm;
  min-height: 9mm;
}
.referencias-titulo, .observaciones-titulo {
  font-weight: bold;
  margin-bottom: 1mm;
  font-size: 7.5pt;
}
.referencias-contenido, .observaciones-contenido {
  font-size: 7.5pt;
}

/* Tabla de totales */
.totales-tabla {
  width: 100%;
  border-collapse: collapse;
}
.totales-tabla td {
  padding: 0.7mm 0;
  font-size: 7.5pt;
  white-space: nowrap;
}
.totales-label {
  text-align: right;
  padding-right: 2mm;
  width: 65%;
  font-weight: bold;
}
.totales-valor {
  text-align: right;
  width: 35%;
}
.total-final {
  font-weight: bold;
  font-size: 8pt;
}
</style>
</head>
